{% extends '::base.html.twig' %}

{% block body -%}
    <h3>Theme</h3>

    <table class="record_properties">
        <tbody>
            <tr>
                <th>Titre</th>
                <td>{{ entity.title }}</td>
            </tr>
            <tr>
                <th>Image</th>
                <td>{{ entity.picture }}</td>
            </tr>
            <tr>
                <th>Courte description</th>
                <td>{{ entity.shortDesc }}</td>
            </tr>
            <tr>
                <th>Longue description</th>
                <td>{{ entity.longDesc }}</td>
            </tr>
        </tbody>
    </table>

        <ul class="record_actions">
    <li>
        <a href="{{ path('admin_theme') }}">Retour Ã  la liste</a>
    </li>
    <li>
        <a href="{{ path('admin_theme_edit', { 'id': entity.id }) }}">Modifier</a>
    </li>
    <li>
        <form action="{{ path('admin_theme_delete', { 'id': entity.id }) }}" method="post">
            <input type="hidden" name="_method" value="DELETE" />
            {{ form_widget(delete_form) }}
            <button type="submit">Supprimer</button>
        </form>
    </li>
</ul>
{% endblock %}
