{% extends '::baseAdmin.html.twig' %}

{% block body -%}
<div class="blockaccueil corps">
    <h3>Modification d'une question</h3>
    
    <div class="liens">
        <a href="{{ path('admin_question_delete', { 'id': entity.id }) }}">Supprimer <img src="{{ asset('/bundles/metinetxtremquizz/css/images/moins.png') }}" size="10" /></a>
        <a href="{{ path('admin_question', { 'id': entity.quizz.id }) }}">Retour Ã  la liste des questions <img src="{{ asset('/bundles/metinetxtremquizz/css/images/retour.png') }}" size="10" /></a>
    </div>
    
    <div class="block_detail">
        {% if entity.webPath is not null %}
            {% set webPath = entity.webPath %}
        {% else %}
            {% set webPath = entity.quizz.webPath %}
        {% endif %}
        <table>
            <tr>
                <td><img src="{{ asset(webPath) }}" class="image" /></td>
                <td><h2>{{ entity.title }}</h2></td>
            </tr>
        </table>
    </div>

    <form action="{{ path('admin_question_update', { 'id': entity.id }) }}" method="post" {{ form_enctype(edit_form) }}>
        <input type="hidden" name="_method" value="PUT" />
        {{ form_widget(edit_form) }}
        <p>
            <button type="submit">Modifier</button>
        </p>
    </form>
</div>
{% endblock %}
