{% extends '::baseAdmin.html.twig' %}

{% block body -%}
<div class="blockaccueil corps">
    <h3>Modification du thème {{ entity.title }}</h3>
    
    <div class="liens">
        <a href="{{ path('admin_theme_new') }}">Nouveau thème <img src="{{ asset('/bundles/metinetxtremquizz/css/images/plus.png') }}" size="10" /></a>
        <a href="{{ path('admin_theme_delete', { 'id': entity.id }) }}">Supprimer <img src="{{ asset('/bundles/metinetxtremquizz/css/images/moins.png') }}" size="10" /></a>
        <a href="{{ path('admin_theme') }}">Retour à la liste des thèmes <img src="{{ asset('/bundles/metinetxtremquizz/css/images/retour.png') }}" size="10" /></a>
    </div>

    <div class="block_detail">
        <table>
            <tr>
                <td><img src="{{ asset(entity.webPath) }}" class="image" /></td>
                <td><h2>{{ entity.title }}</h2></td>
            </tr>
        </table>
    </div>
    
    
    <form action="{{ path('admin_theme_update', { 'id': entity.id }) }}" method="post" {{ form_enctype(edit_form) }}>
        <input type="hidden" name="_method" value="PUT" />
            {{ form_widget(edit_form) }}
        <p>
            <button type="submit">Modifier</button>
        </p>
    </form>
</div>
{% endblock %}
