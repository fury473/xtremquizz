{% extends '::base.html.twig' %}

{% block body %}
    <h1>XTREM QUIZZ</h1>
        
    <ul class="menu">
        <li><a href="{{ path('admin') }}">Accueil</a></li>
        <li><a href="{{ path('admin_theme') }}">Gestion des thèmes</a></li>
        <li><a href="{{ path('admin_quizz') }}">Gestion des quizz</a></li>
    </ul>

    <h2>Thèmes</h2>

    <table class="records_list">
        <thead>
            <tr>
                <th>Titre</th>
                <th>Image</th>
                <th>Courte description</th>
                <th>Longue description</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td>{{ entity.title }}</td>
                <td>{{ entity.picture }}</td>
                <td>{{ entity.shortDesc }}</td>
                <td>{{ entity.longDesc }}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('admin_theme_show', { 'id': entity.id }) }}">Afficher</a>
                    </li>
                    <li>
                        <a href="{{ path('admin_theme_edit', { 'id': entity.id }) }}">Modifier</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('admin_theme_new') }}">Nouveau thème</a>
        </li>
    </ul>
{% endblock %}