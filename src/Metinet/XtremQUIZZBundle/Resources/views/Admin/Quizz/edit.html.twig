{% extends '::base.html.twig' %}

{% block body -%}
    <h1>XTREM QUIZZ</h1>
        
    <ul class="menu">
        <li><a href="{{ path('admin_theme') }}">Gestion des thèmes</a></li>
        <li><a href="{{ path('admin_quizz') }}">Gestion des quizz</a></li>
    </ul>

    <h2>Modification du quizz {{ entity.title }}</h2>

    <form action="{{ path('admin_quizz_update', { 'id': entity.id }) }}" method="post" {{ form_enctype(edit_form) }}>
        <input type="hidden" name="_method" value="PUT" />
        {{ form_widget(edit_form) }}
        <p>
            <button type="submit">Modifier</button>
        </p>
    </form>

        <ul class="record_actions">
    <li>
        <a href="{{ path('admin_quizz') }}">Retour à la liste</a>
    </li>
    <li>
        <form action="{{ path('admin_quizz_delete', { 'id': entity.id }) }}" method="post">
            <input type="hidden" name="_method" value="DELETE" />
            {{ form_widget(delete_form) }}
            <button type="submit">Supprimer</button>
        </form>
    </li>
</ul>
{% endblock %}
