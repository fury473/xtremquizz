{% extends '::base.html.twig' %}

{% block body %}
    {% set user = app.session.get('user') %}
    <div class="blockaccueil menu">
        <img src="{{ asset('/bundles/metinetxtremquizz/images/logo_xtremquizz.png') }}" id="logo"/>
        <ul class="menu">
            <li><a href="{{ path('ranking') }}" class="lien-menu">Classement</a></li>
            <li><a href="{{ path('quizz') }}" class="lien-menu">Quizz</a></li>
            <li><a href="{{ path('quizz') }}" class="lien-menu">Invitation</a></li>
        </ul>
    </div>
<div class="blockaccueil corps">
       <h3>TOP 10</h3>

    <table class="classement_list">
        {% for entity in entities %}
            {% if (entity.rank <= 10) %}
                     <tr>
                        <td>{{ entity.rank }}</td>
                        <td><span class="gras">{{ entity.firstname }} {{ entity.lastname }}</span><br />
                            {{ entity.points }} points<br />
                            Temps moyen: {{ entity.averageTime }}sec</td>
                        <td><button onclick="defierAmis({{ entity.fbUid }})">Inviter</button>
                        <button onclick="publishFriendWALL({{ entity.fbUid }})">Défier</button></td>
                    </tr>
            {% endif %}
        {% endfor %}
    </table>
       
    <h3 style="margin-top: 20px">Classement général</h3>

    <table class="classement_list">
        {% for entity in entities %}
            {% if (entity.rank <= myRank + 5) and (entity.rank >= myRank - 5) %}
                   <tr>
                        <td>{{ entity.rank }}</td>
                        <td><span class="gras">{{ entity.firstname }} {{ entity.lastname }}</span><br />
                            {{ entity.points }} points<br />
                            Temps moyen: {{ entity.averageTime }}sec</td>
                        <td><button onclick="defierAmis({{ entity.fbUid }})">Inviter</button>
                        <button onclick="publishFriendWALL({{ entity.fbUid }})">Défier</button></td>
                    </tr>
            {% endif %}
        {% endfor %}
    </table>
    
    
    <h3 style="margin-top: 20px">Classement des amis</h3>

    <table class="classement_list">
       {% set i = 1%}
       {% for entity in entities %}
            {% if (entity.fbUid == user.fb_uid) %}
                <tr>
                    <td>{{ entity.rank }}</td>
                    <td>{{ i }}</td>
                    <td><span class="gras">{{ entity.firstname }} {{ entity.lastname }}</span><br />
                            {{ entity.points }} points<br />
                            Temps moyen: {{ entity.averageTime }}sec</td>
                        <td><button onclick="defierAmis({{ entity.fbUid }})">Inviter</button>
                        <button onclick="publishFriendWALL({{ entity.fbUid }})">Défier</button></td>
                </tr>
                {% set i = i + 1 %}
            {% endif %}
            {% for friend in friends %}
                {% if (entity.fbUid == friend.id) %}
                    <tr>
                        <td>{{ entity.rank }}</td>
                        <td>{{ i }}</td>
                        <td><span class="gras">{{ entity.firstname }} {{ entity.lastname }}</span><br />
                            {{ entity.points }} points<br />
                            Temps moyen: {{ entity.averageTime }}sec</td>
                        <td><button onclick="defierAmis({{ entity.fbUid }})">Inviter</button>
                        <button onclick="publishFriendWALL({{ entity.fbUid }})">Défier</button></td>
                    </tr>
                    {% set i = i + 1 %}
                {% endif %}
           {% endfor %}
        {% endfor %}
    </table>
</div>
{% endblock %}
        
