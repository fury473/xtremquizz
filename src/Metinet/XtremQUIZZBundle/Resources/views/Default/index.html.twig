{% extends '::base.html.twig' %}

{% block body %}
    {% set user = app.session.get('user') %}

    <div class="blockaccueil menu">
        <img src="{{ asset('/bundles/metinetxtremquizz/images/logo_xtremquizz.png') }}" id="logo"/>
        <ul class="menu">
            <li><a href="{{ path('ranking') }}" class="lien-menu">Classement</a></li>
            <li><a href="{{ path('admin') }}" class="lien-menu">Quizz</a></li>
            <li><a href="{{ path('admin') }}" class="lien-menu">Invitation</a></li>
        </ul>
    </div>

    <div class="blockaccueil corps">
    <h3>Votre profil</h3>
    
    <table>
        <tr>
            <td class="width_100">
                <img src="https://graph.facebook.com/{{ user.fb_uid }}/picture?type=large&width=120&height=120"/>
            </td>
            <td style="padding-bottom: 83px;">
                <div class="titres-block">{{ user.firstname }} {{ user.lastname }}</div>
                Points: {{ points }} <br />
                Temps moyen : {{ averageTime }} secondes<br />
                    {% if classementJoueur == NULL %}
                         Classement général: {{ totalJoueur }}/{{ totalJoueur }}
                    {% else %}
                          Classement général: {{ classementJoueur }}/{{ totalJoueur }}
                    {% endif %}
                    <button onclick="publishWALL({{ classementJoueur }}, {{ totalJoueur }})">Publier</button>
            </td>
        </tr>
    </table>
    
    <h3 style="margin-top: 15px;">Les derniers quizz disponibles</h3>

    <p>   
    {% for quizz in LastQuizz %}
    <a href="{{ path('quizz_show', { 'id': quizz.id }) }}">{{quizz.title}}</a> <br/>
    {% endfor %}
     </p>
     {% if displayFriend == 0 %}
      <h2>Classement géneral</h2>

    <table class="records_list">
        <thead>
            <tr>
                <th>Classement</th>
                <th>Prénom</th>
                <th>Nom</th>
                <th>Points</th>
                <th>Temps moyen</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>  
        {% for entity in entities %}
            {% if (entity.rank <= myRank + 2) and (entity.rank >= myRank - 2) %}
                    <tr>
                        <td>{{ entity.rank }}</td>
                        <td>{{ entity.firstname }}</td>
                        <td>{{ entity.lastname }}</td>
                        <td>{{ entity.points }}</td>
                        <td>{{ entity.averageTime }}</td>
                        <td><button onclick="defierAmis({{ entity.fbUid }})">Inviter</button><br/>
                        <button onclick="publishFriendWALL({{ entity.fbUid }})">Défier</button></td>
                    </tr>
            {% endif %}
        {% endfor %}
        </tbody>
    </table>
      {% else %}
          <h2>Classement des amis</h2>

            <table class="records_list">
                <thead>
                    <tr>
                        <th>Classement général</th>
                        <th>Classement</th>
                        <th>Prénom</th>
                        <th>Nom</th>
                        <th>Points</th>
                        <th>Temps moyen</th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody>
               {% set i = 1%}
               {% for entity in entities %}
                    {% if (entity.fbUid == user.fb_uid) %}
                        <tr>
                            <td>{{ entity.rank }}</td>
                            <td>{{ i }}</td>
                            <td>{{ entity.firstname }}</td>
                            <td>{{ entity.lastname }}</td>
                            <td>{{ entity.points }}</td>
                            <td>{{ entity.averageTime }}</td>
                            <td><button onclick="defierAmis({{ entity.fbUid }})">Inviter</button><br/>
                            <button onclick="publishFriendWALL({{ entity.fbUid }})">Défier</button></td>
                        </tr>
                        {% set i = i + 1 %}
                    {% endif %}
                    {% for friend in friends %}
                        {% if (entity.fbUid == friend.id) and (entity.rank <= myRank + 2) and (entity.rank >= myRank - 2) %}
                            <tr>
                                <td>{{ entity.rank }}</td>
                                <td>{{ i }}</td>
                                <td>{{ entity.firstname }}</td>
                                <td>{{ entity.lastname }}</td>
                                <td>{{ entity.points }}</td>
                                <td>{{ entity.averageTime }}</td>
                                <td><button onclick="defierAmis({{ entity.fbUid }})">Inviter</button><br/>
                                <button onclick="publishFriendWALL({{ entity.fbUid }})">Défier</button></td>
                            </tr>
                            {% set i = i + 1 %}
                        {% endif %}
                   {% endfor %}
                {% endfor %}
                </tbody>
            </table>
      {% endif %}
    </p>
</div>
{% endblock %}
